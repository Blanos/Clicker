<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="200dp"
    android:layout_height="match_parent"
   >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rewardTopText"
        android:text="@string/rewardTopText"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rewardMiddleText"
        android:text=""
        android:layout_below="@id/rewardTopText"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_centerInParent="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rewardBottomText"
        android:text="@string/rewardBottomText"
        android:layout_below="@id/rewardMiddleText"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_centerInParent="true" />

</RelativeLayout>