<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="match_parent"
    android:layout_gravity="end"
    tools:context="com.example.clicker.HeroFragment"
    android:id="@+id/hero_fragment"
    >

        <TextView
            android:text="@string/HeroExpText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/HeroExpText"
            android:textSize="30sp"
            android:textColor="@color/textColor"/>

        <TextView
            android:text="@string/HeroExpNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/HeroExpNumber"
            android:textSize="30sp"
            android:layout_toStartOf="@+id/BetweenExpT"
            android:layout_toLeftOf="@+id/BetweenExpT"
            android:textColor="@color/textColor"/>

        <TextView
            android:text="@string/BetweenExpText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:id="@+id/BetweenExpT"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/textColor"/>

        <TextView
            android:text="@string/HeroNextExpNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/HeroNextExpNumbers"
            android:textSize="30sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/HeroExpNumber"
            android:textColor="@color/textColor"/>

        <TextView
            android:text="@string/HeroLevelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/HeroLevelText"
            android:textSize="30sp"
            android:layout_below="@+id/HeroNextExpNumbers"
            android:textColor="@color/textColor"/>

        <TextView
            android:text="@string/HeroLevelNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:id="@+id/HeroLevelNumber"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/HeroNextExpNumbers"
            android:textColor="@color/textColor"/>

        <TextView
            android:text="@string/HeroDamageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/HeroDamageText"
            android:textSize="30sp"
            android:layout_below="@+id/HeroLevelText"
            android:textColor="@color/textColor"/>

        <TextView
            android:text="@string/HeroDamageNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/HeroDamageNumber"
            android:textSize="30sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/HeroLevelNumber"
            android:textColor="@color/textColor"/>

</RelativeLayout>
