<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="match_parent"
    android:layout_gravity="end"
    tools:context="com.example.clicker.TroopsFragment">

    <ListView
        android:layout_width="200dp"
        android:id="@+id/Troops_List"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/NextTroopCostNumber">
    </ListView>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/NextTroopCostNumber"
        android:layout_above="@+id/HireTroopButton"
        android:text=""
        android:textAlignment="viewEnd"
        android:gravity="end"/>

    <Button
        android:text="@string/HireTroopButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/HireTroopButton"
        android:onClick="HireTroop"
        />

</RelativeLayout>
